<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/noteName"
                android:text="noteName"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/noteDateStart"
                android:text="noteDateStart"
                android:textColor="@color/cardview_dark_background"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/noteDateEnd"
                android:text="noteDateEnd"
                android:textColor="@color/cardview_dark_background"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/noteLocation"
                android:text="noteLocation"
                android:textColor="@color/cardview_dark_background"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/noteDetail"
                android:text="noteDetail"
                android:textColor="@color/cardview_dark_background"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <ImageView

            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_more"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>
    </LinearLayout>
</androidx.cardview.widget.CardView>